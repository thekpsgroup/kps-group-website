{
	"name": "kps-group-modern-suite",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "vite build",
		"dev": "vite dev",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"deploy": "vercel --prod",
		"deploy:preview": "vercel",
		"deploy:full": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
		"setup:env": "powershell -ExecutionPolicy Bypass -File scripts/setup-env.ps1",
		"env:add": "vercel env add",
		"env:ls": "vercel env ls",
		"env:rm": "vercel env rm"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.4.0",
		"@sveltejs/kit": "^2.34.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.1",
		"svelte": "^4.2.19",
		"svelte-check": "^3.6.4",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.6.2",
		"typescript": "^5.6.2",
		"vite": "^5.4.19"
	},
	"type": "module",
	"dependencies": {
		"stripe": "^18.4.0"
	}
}
